<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.xtreme.model.dao.UserDao">
	<!-- selectAll() : 전체 사용자 조회 -->
	<select id="selectAll" resultType="User">
		SELECT *
		FROM user
	</select>
	
	<!-- selectById(String id) : id로 사용자 조회-->
	<select id="selectById" parameterType="String" resultType="User">
		SELECT *
		FROM user
		WHERE id = #{id}
	</select>

	<!-- @@@@@중복확인 넣어야함!!!!!!! -->
	<!-- insertUser(User user) : 회원가입 )-->	
	<insert id="insertUser" parameterType="User">
		INSERT INTO user
		VALUES (#{id}, #{password}, #{email}, #{name}, #{age}, #{profileImg})
	</insert>
	
	<!-- updateUser(User user) : 개인정보 수정 -->
	<update id="updateUser" parameterType="User">
		UPDATE user
		SET email = #{email}, name = #{name}, profileImg = #{profileImg}
		WHERE id = #{id}
	</update>
	
	
</mapper>