<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.xtreme.model.dao.ParticipateDao">
	<!-- 전체 대회 목록 조회 -->
	<select id="selectAll" resultType="Competition">
		SELECT compSports, compName, registDate, comDay
		FROM competition
	</select>
	
	<!-- 대회 상세 조회 -->
	<select id="selectById" parameterType="int" resultType="Competition">
		SELECT *
		FROM competition
		WHERE id = #{id}
	</select>
	
	<!-- condition으로 묶어서 처리 -->
	<select id="searchByCondition" resultType="Competition" parameterType="SearchCondition" >
		SELECT compSports, compName, registDate, comDay
		FROM competition
		<!-- 어떤 기준을 가지고 검색을 할거냐!!! -->
		<if test="key != 'none'">
			WHERE ${key} LIKE concat('%', #{word}, '%')
		</if>
		<!-- 어떤 기준으로 어떤 방향으로 정렬할래? -->
		<if test="orderBy != 'none'">
			ORDER BY ${orderBy} ${orderByDir}
		</if>
	</select>
</mapper>